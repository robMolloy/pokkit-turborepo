{
  "name": "@repo/pokkit-testing",
  "version": "0.0.0",
  "exports": {
    ".": "./index.ts"
  },
  "license": "MIT",
  "scripts": {
    "tsc": "cd ../.. && packages/pokkit-testing/node_modules/.bin/tsc --project packages/pokkit-testing/tsconfig.json --noemit --watch",
    "lint": "eslint \"**/*.ts\"",
    "test": "vitest",
    "db:init-dev": "cd pocketbase && go mod init app-db && go mod tidy",
    "db:serve-dev": "cd pocketbase && go run . serve --http=\"0.0.0.0:8090\"",
    "db:build": "cd pocketbase && go build && mkdir -p builds && mv app-db builds/app-db",
    "db:build:on-change-to-dev": "cd pocketbase && npx nodemon --delay 1 --watch pocketbase/app-db/main.go --exec \"pnpm run db:build\""
  },
  "dependencies": {
    "fs-extra": "^11.3.3",
    "pocketbase": "^0.26.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "eslint": "^8.57.0",
    "jsdom": "^28.1.0",
    "typescript": "5.9.2",
    "vite": "^5.1.4",
    "vitest": "^4.0.18"
  }
}
